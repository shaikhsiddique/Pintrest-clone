<!DOCTYPE html>
<html>
  <head>
    <title>Pinterest-Login</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <div class="content">
        <!-- Pinterest logo -->
        <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="Pinterest logo" class="img1" />

        <!-- Assuming this is an EJS template -->
        <p class="header">Log in to see more</p>

        <% if (error.length > 0) { %>
        <!-- Display flash messages if there are any errors -->
        <% error.forEach(function(message) { %>
        <p class="login-error"><%= message %></p>
        <% }); %>
        <% } %>



        <!-- ... previous code ... -->

        <form action="/login" method="post">
          <input type="text" name="username" placeholder="Username" class="detail" /><br />
          <input type="password" name="password" placeholder="Password" class="detail" />
          <input type="submit" class="btn int" value="Login Account">
        </form>

        <!-- ... remaining code ... -->

        <a href="/forgot">Forgot your password?</a>
        <footer>
          <p>
            By continuing, you agree to Pinterest's
            <b>Terms of Service, Privacy policy.</b>
          </p>
          <hr />
          <a href="/index">Not on Pinterest yet? Sign up</a>
        </footer>
      </div>
    </div>
  </body>
</html>
